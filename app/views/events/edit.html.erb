<%= link_to 'Back to Sources', event_sources_url, :class => 'admin-link' %>
<%= form_for @event, html: { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>Update This Event (Scraped <%= @event.created_at.strftime("%m/%d/%Y") %> from &quot;<%= @event.event_source.title %>&quot;)</legend>
    <%= render partial: 'events/form', locals: { f: f }  %>
    <div class="form-actions">
      <%= link_to 'Cancel', event_sources_url %>
      <%= f.submit 'Save Changes', :class => 'btn btn-primary' %>
      <%= link_to 'Post to AppleButter', approve_event_url(@event), method: :post, :class => 'btn btn-warning' %>
    </div>
  </fieldset>
<% end %>