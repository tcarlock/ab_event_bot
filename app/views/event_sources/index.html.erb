<%= link_to 'Back to Events', root_url %>
<%= link_to 'Create New Source', new_event_source_url %>
<h3>Sources</h3>
<table class="table" class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Source</th>
      <th>Last Scraped</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @sources.each do |source| %>
      <tr>
        <td>
          <strong>
            <%= URI(source.url).host %>
          </strong>
          <%= source.url %>
        </td>
        <td>
          <%= source.last_scraped.strftime("%m/%d/%Y at %l:%M %p") %>
        </td>
        <td>
          <a class="hidden scrape-link btn">Scrape Site</a>
          <%= link_to 'Edit', edit_event_source_url(source), :class => 'btn btn-primary' %>
          <%= link_to 'Remove', source, confirm: 'Are you sure you want to remove this source?', method: :delete, :class => 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>