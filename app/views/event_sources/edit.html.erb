<%= form_for @source, html: { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>Update This Event Source</legend>
    <%= render partial: 'event_sources/form', locals: { f: f }  %>
    <div class="form-actions">
      <%= link_to 'Cancel', root_url %>
      <%= f.submit 'Save Changes', :class => 'btn btn-primary' %>
    </div>
  </fieldset>
<% end %>